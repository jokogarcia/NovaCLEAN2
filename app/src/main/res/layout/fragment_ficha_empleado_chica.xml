<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="15dp"
    tools:context=".fichaEmpleadoChica">

    <android.support.v7.widget.CardView
        android:id="@+id/cvEmpleadoFicha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#77D0F8FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFotoEmpleado"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:contentDescription="Foto de empleado"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvNombreEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Rafa Gorgory" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>